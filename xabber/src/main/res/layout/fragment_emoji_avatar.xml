<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/avatar_background" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/details_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:src="@drawable/avatar_swipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_swipe">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/green_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/orange_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/red_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/blue_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/indigo_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/purple_400"
                android:layout_width="64dp"
                android:layout_margin="8dp"
                android:layout_height="64dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/lime_400"
                android:layout_margin="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/pink_400"
                android:layout_margin="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:src="@drawable/round_shape"
                android:tint="@color/amber_400"
                android:layout_margin="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />
        </TableRow>
    </TableLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="32dp"
        android:src="@drawable/round_shape"
        android:tint="@color/blue_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:src="@drawable/round_shape"
        android:tint="@color/grey_400"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="ðŸ’©"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>