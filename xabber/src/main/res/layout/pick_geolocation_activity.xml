<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pickgeolocation_toolbar_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pickgeolocation_progressbar"

        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="8dp"
        android:src="?attr/standard_arrow_left_icon" />

    <!--View visible then search inactive-->
    <RelativeLayout
        android:id="@+id/pickgeolocationtoolbar_greetings_view"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/pickgeolocation_toolbar_back_button"
        app:layout_constraintLeft_toLeftOf="@id/pickgeolocation_toolbar_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pickgeolocation_progressbar"
        android:layout_marginTop="6dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp">

        <TextView
            android:id="@+id/pickgeolocation_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/contact_list_contact_name_text_color"
            android:textSize="18sp"
            tools:text="@string/chat_screen__dialog_title__pick_location" />

        <ImageView
            android:id="@+id/pickgeolocation_toolbar_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="8dp"
            android:src="?attr/standard_search_icon" />

    </RelativeLayout>

    <!--View visible then search active-->
    <RelativeLayout
        android:id="@+id/pickgeolocation_toolbar_search_view"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/pickgeolocation_toolbar_back_button"
        app:layout_constraintLeft_toRightOf="@id/pickgeolocation_toolbar_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pickgeolocation_progressbar"

        android:layout_toEndOf="@+id/pickgeolocation_toolbar_back_button"
        android:layout_toRightOf="@+id/pickgeolocation_toolbar_back_button"
        android:layout_marginTop="6dp"
        android:paddingStart="18dp"
        android:paddingLeft="18dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/pickgeolocation_toolbar_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/pickgeolocation_toolbar_clear_button"
            android:layout_toLeftOf="@id/pickgeolocation_toolbar_clear_button"
            android:background="@color/transparent"
            android:hint="@string/type_here_to_search"
            android:textSize="16sp"
            android:textStyle="normal"
            android:inputType="textNoSuggestions"/>

        <ImageView
            android:id="@+id/pickgeolocation_toolbar_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="8dp"
            android:src="?attr/standard_clear_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pickgeolocation_progressbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/pickgeolocation_toolbar_back_button"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pickgeolocation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/pickgeolocation_progressbar"
        android:visibility="gone"
        tools:visibility="visible" />

    <org.osmdroid.views.MapView
        android:id="@+id/pickgeolocation_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pickgeolocation_progressbar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </org.osmdroid.views.MapView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pickgeolocation_location_bottom_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"

        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/edit_text_rounded_corners_background_grey"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/pickgeolocation_location_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:paddingTop="4dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pickgeolocation_location_send_button"
            app:layout_constraintRight_toLeftOf="@id/pickgeolocation_location_send_button"

            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Red square, 1" />

        <TextView
            android:id="@+id/pickgeolocation_location_coordinates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"

            app:layout_constraintTop_toBottomOf="@id/pickgeolocation_location_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pickgeolocation_location_send_button"
            app:layout_constraintRight_toLeftOf="@id/pickgeolocation_location_send_button"

            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="54.231321, 64.2321343" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pickgeolocation_location_send_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:src="@drawable/ic_send"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>